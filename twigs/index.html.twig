<head>

  <!--[if IE]><script type="text/javascript">
        // Fix for IE ignoring relative base tags.
        // See http://stackoverflow.com/questions/3926197/html-base-tag-and-local-folder-path-with-internet-explorer
        (function() {
            var baseTag = document.getElementsByTagName('base')[0];
            baseTag.href = baseTag.href;
        })();
    </script><![endif]-->
  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta http-equiv="Content-Language" content="es-es">

    <!-- SEO -->
  <title>{% block title %}Untitled{% endblock %}, title | Lab RTVE.es</title>
  <meta name="description" content="{{ block('description') }}">
  <meta name="Keywords" content="{{ block('keywords') }}">
  <meta name="author" content="lab.rtve.es">
  <meta property="og:title" content="{{ block('title') }}">
  <meta property="og:description" content="{{ block('description') }}">
  <meta property="og:url" content='http://lab.rtve.es{{ app.request.getRequestURI() }}'>
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@rtve">
  <meta name="twitter:creator" content="@lab_rtvees">
  <meta name="twitter:title" content="{{ block('title') }}">
  <meta name="twitter:description" content="{{ block('description') }}">
  <meta property="og:image" content="http://lab.rtve.es{{ app.config.base_url }}img/seo/{{ block('image') }}.jpg">
  <meta name="twitter:image" content="http://lab.rtve.es{{ app.config.base_url }}img/seo/{{ block('image') }}.jpg">

  <!-- viewport -->
  <meta name="viewport" content="width=1100, user-scalable=no"/>

  <!-- build:css bin/styles.min.css -->
    <link rel="stylesheet" href="./css/styles.css">
  <!-- endbuild -->

  <!-- build:js bin/app-pre.js -->
    <script type="text/javascript" src="libs/modernizr-v2.7.1.js"></script>
  <!-- endbuild -->

  <link rel="stylesheet" href="http://www.rtve.es/css/tipografias.css">

  {% if not app.config.debug %}
    <script type="text/javascript" src="//www.rtve.es/js/mushrooms/rtve_mushroom.js" ></script>
  {% endif %}

</head>

<body>

  <main id="seo-basico" role="main" style="display:none" class="hidden">
    {% block seo %}{% endblock %}
  </main>
  <script>document.getElementById('seo-basico').innerHTML = '';</script>

  <aside role="complementary">
    {% block content %}No content{% endblock %}
  </aside>

  <!-- build:js bin/app.js -->
  <script type="text/javascript" src="libs/jquery-1.11.0.js"></script>
  <script type="text/javascript" src="libs/Snap.svg-0.2.0/dist/snap.svg.js"></script>
  
  <script type="text/javascript" src="js/base.js"></script> 
  <!-- endbuild -->

  <script>

    //var activeSect = {% if section is not defined %} "" {% else %} "{{ section }}" {% endif %};
    //var subSect = {% if year is not defined %} "" {% else %}"{{ year }}"{% endif %};

    if(labTools && labTools.url) {
      labTools.url.data.baseUrl = '';
      labTools.url.data.baseUrlNO = '{{ app.config.base_url }}';
      labTools.url.data.ga = {% if app.config.debug %}false{% else %}true{% endif %};
    }

    if(labTools && labTools.console) {
      labTools.console.data.log = {% if app.config.debug %}false{% else %}true{% endif %};
    }

    {% block js %}{% endblock %}
  </script>

</body>
</html>